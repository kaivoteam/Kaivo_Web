<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contáctanos</h2>
                <h3 class="section-subheading text-muted">Escríbenos, nos encantaría conversar contigo.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <h5> Nombre* </h5>
                                <%= form.text_field :name, id: :contact_name, class: 'form-control', placeholder: "", required: true %>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <h5> Email* </h5>
                                <%= form.text_field :mail, id: :contact_mail, pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: 'form-control', placeholder: "", required: true %>

                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <h5> Teléfono </h5>
                                <%= form.text_field :phone, id: :contact_phone, pattern: '[+[0-9]{8,10}', class: 'form-control', placeholder: "" %>
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                <h5> Mensaje* </h5>
                                <%= form.text_area :message, id: :contact_message, class: 'form-control', placeholder: "", required: true %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        
                        <div class="col-md-6" style="text-align: center;">
                            <br><br>
                            <div id= "fb" class="fb-page" data-href="https://www.facebook.com/holsense/" data-tabs="timeline" data-width="500" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"  data-turbolinks-permanent><blockquote cite="https://www.facebook.com/holsense/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/holsense/">HolSense</a></blockquote></div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-6 text-center">
                            <div id="success"></div>
                            <%= form.submit 'Enviar mensaje',  class: 'btn btn-xl', id:"send_msge" %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<% end %>